# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
# insert_final_newline = true

# 4 space indentation
indent_style = space
indent_size = 4

# Set default charset
charset = utf-8

# Trim trailing whitespace
trim_trailing_whitespace = true

# Specific settings for Python files
[*.py]
indent_style = space
indent_size = 4

# Make the function/variable/method names consistent
# [*.py]
# max_line_length = 140
# set in ruff.toml

# Specific settings for JSON files
[*.json]
indent_style = space
indent_size = 2

# Specific settings for YAML files
[*.yaml]
[*.yml]
indent_style = space
indent_size = 2

# Specific settings for TOML files
[*.toml]
indent_style = space
indent_size = 2
